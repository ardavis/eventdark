%h1 Events

= link_to 'New Event', new_event_path, class: 'btn btn-primary'

%table.table
  %thead
    %th ID
    %th Name
    %th Description
    %th Location
    %th

  %tbody
    - @events.each do |event|
      %tr
        %td= event.id
        %td= link_to event.name, event
        %td= event.description
        %td= link_to event.location.name, event.location
        %td
          = link_to 'Quick RSVP', '#', class: 'quick_rsvp btn btn-primary btn-sm', data: { event_id: event.id }
          = link_to 'Edit', edit_event_path(event), class: 'btn btn-info btn-sm'
          = link_to 'Delete', event, method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'Are you sure you want to delete this event?' }